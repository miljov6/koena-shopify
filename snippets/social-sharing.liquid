<!-- /snippets/social-sharing.liquid -->
{% assign shareButtonStyle = settings.social_sharing_style %}
<style>

  #btn1:hover{
    opacity: 0.8;
    transition: all 0.4s ease-out 0s;
  }
  
  #btn2 {
    display: none;
    transition: all 0.4s ease-out 0s;
    }

  #btn2:hover{
    opacity: 0.8;
    transition: all 0.4s ease-out 0s;
  }

  .social-text {
    color: #0f72ea;
    text-transform: uppercase;
    font-weight: 600;
    font-size: 16px!important;
    line-height: 26px!important;
  }

  .share-icon {
    color: #0f72ea;
  }

  .share-a {
    color: #0f72ea;
    vertical-align: middle!important;
    padding: 0!important;
  }

  .share-b {
    width: 50px;
    height: 50px!important;
    line-height: 45px!important;
    border-radius: 50%!important;
    text-align: center!important;
    border: solid 2px rgba(74,74,74,.1)!important;
    border-image-source: initial;
    border-image-slice: initial;
    border-image-width: initial;
    border-image-outset: initial;
    border-image-repeat: initial;
    transform: translate(0,25px)!important;
    transition: all .15s ease-out!important;
  }

  .social-sharing .icon:before {
    line-height: 22px;
    font-size: 20px;
  }

  .social-sharing {
    padding: 84px 11px 0px 13px;
  }

  .social-sharing-1 {
    display: inline-block;
    vertical-align: top;
    height: 42px!important;
    line-height: 22px;
    font-size: 12px;
    width: 27px!important;
    margin: 0 20px 0 0;
}

</style>
<div class="social-sharing {{ shareButtonStyle }}">
  <div id="btn1" onclick="changeStyle()">
    <button>
      <span class="social-sharing__icon share-icon social-sharing-1">
        <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-share" viewBox="0 0 13 15" id="btn1"><path fill="#0f72ea" d="M10.5 10c-.8 0-1.6.4-2 1L4.8 8.6c.1-.4.2-.7.2-1.1s-.1-.7-.2-1.1L8.5 4c.5.6 1.2 1 2 1C11.9 5 13 3.9 13 2.5S11.9 0 10.5 0 8 1.1 8 2.5c0 .2 0 .4.1.5l-4 2.6c-.4-.4-1-.6-1.6-.6C1.1 5 0 6.1 0 7.5S1.1 10 2.5 10c.6 0 1.2-.2 1.6-.6l4 2.6c-.1.1-.1.3-.1.5 0 1.4 1.1 2.5 2.5 2.5s2.5-1.1 2.5-2.5-1.1-2.5-2.5-2.5z"></path></svg>
      </span>
      <br>
      <span class="social-text">Share</span>
    </button>
  </div>
  <div id="btn2" onclick="changeStyle()">
  <button>
      <span class="social-sharing__icon share-icon social-sharing-1">
        <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-close" viewBox="0 0 16.8 16.8"><path fill="#0f72ea" d="M16.8 1.5L15.4.1 8.4 7l-7-7L0 1.4l7 7-7 7 1.4 1.4 7-7 7 7 1.4-1.4-7-7z"></path></svg>
      </span>
      <br>
      <span class="social-text">Share</span>
    </button>
      <div>
        {% if settings.share_facebook %}
        <div>
          <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="share-facebook share-b" title="{{ 'general.social.alt_text.share_on_facebook' | t }}">
            <span class="icon icon-facebook share-a " aria-hidden="true"></span>
            <span class="share-title" aria-hidden="true" style="display: none;">{{ 'general.social.share_on_facebook' | t }}</span>
            <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
          </a>
        </div>  
        {% endif %}
      
        {% if settings.share_twitter %}
        <div>
          <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="share-twitter share-b" title="{{ 'general.social.alt_text.share_on_twitter' | t }}">
            <span class="icon icon-twitter share-a " aria-hidden="true"></span>
            <span class="share-title" aria-hidden="true" style="display: none;">{{ 'general.social.share_on_twitter' | t }}</span>
            <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
          </a>
        </div> 
        {% endif %}
      
        {% if settings.share_pinterest %}
        <div>
          <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" class="share-pinterest share-b" title="{{ 'general.social.alt_text.share_on_pinterest' | t }}">
            <span class="icon icon-pinterest share-a " aria-hidden="true"></span>
            <span class="share-title" aria-hidden="true" style="display: none;">{{ 'general.social.share_on_pinterest' | t }}</span>
            <span class="visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
          </a>
        </div>
          {% endif %}
      </div>  
  </div>  
  </div>
</div>

<script>
  var btn = document.getElementById("btn1");
  var btn2 = btn.nextElementSibling;

  function changeStyle(){
    if (btn2.style.display ==='none') {
      btn2.style.display = 'block';
      btn.style.display = 'none';
    } else {
      btn2.style.display = 'none';
      btn.style.display = 'block';
    }
  }
</script>
<script>
  var coll = document.getElementsByClassName("collapsible");
  var i;
  
  for (i = 0; i < coll.length; i++) {
    coll[i].addEventListener("click", function() {
      var content = this.nextElementSibling;
      if (content.style.display === "block") {
        content.style.display = "none";
      } else {
        content.style.display = "block";
      }
    });
  }
</script>