{% assign partner__image =  section.settings.partner__image | img_url:"master" %}


<div class="partner__header-wrap">
    <div class="partner__header" style="background-image: linear-gradient(359deg, rgba(0, 0, 0, 0.6), transparent), url({{ partner__image }});">
      <h1 class="gb__h1">{{ section.settings.partner__h }}</h1>
      <div class="gb__line"></div>
    </div>
    <div class="partner__sub--wrapper">
    <h2 class="partner__sub partner__sub-1">{{ section.settings.partner__text }}</h2>
    </div>
    </div>

<div class="page-width">
  
  
{% for block in section.blocks %}
  
{% assign slide__img =  block.settings.slide__image | img_url:"master" %}
{% assign block__img =  block.settings.block__imgage | img_url:"master" %}


  
  <div class="gb__tiles">
    
{% if block.type == 'blocksection' %}   
    
    <div class="gb__tile {% if block.settings.block__flipped == false %} first {% elsif block.settings.block__flipped == true %} flipped {% endif %}">
      <div class="gb__image"><img src="{{ block__img }}" alt="" class="gb__img"></div>
      <div class="gb__text">
        <h2 class="gb__tile-h">{{ block.settings.block__h}}</h2>
        <div class="gb__line"></div>
        <p class="gb__p">{{ block.settings.block__text}}</p>
      </div>
    </div>
    
{% endif %}    
    
    <div class="gb__tile slider">
      <div data-animation="slide" data-duration="500" data-infinite="1" class="partner__slider w-slider">
        <div class="w-slider-mask">
          

{% if block.type == 'slide' %}
      
          <div class="slider__wrapper w-clearfix w-slide">
            <div class="slider__image"><img src="{{ slide__img }}" alt="" class="gb__img"></div>
            <div class="slider__text">
              <h2 class="gb__tile-h">{{ block.settings.slide__h }}</h2>
              <div class="gb__line"></div>
              <p class="gb__p">{{ block.settings.slide__text }}</p>
            </div>
          </div>
          


{% endif %}
          
{% endfor %}              

        </div>
        <div class="w-slider-arrow-left">
          <div class="w-icon-slider-left"></div>
        </div>
        <div class="right-arrow w-slider-arrow-right">
          <div class="w-icon-slider-right"></div>
        </div>
        <div class="slide-nav w-slider-nav w-round"></div>
      </div>
    </div>
    
  </div>  
  
</div>


