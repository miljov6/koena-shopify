<style>
.partner__sub--wrapper.cta {
  display: block;
  text-align: center;
  background-color: white;
}
  .partner__sub.cta {
   margin: auto; 
    display: block;
    color:#0f72ea;
    max-width: 35em;
    text-align: center;
    background-color: white;
  }
.gb__button {
  display: block;
  margin: auto;
  width: 100%;
  max-width: 250px;
  padding: 12px 30px;
  background-color: #1272ea;;
  font-weight: 700;
  text-transform: uppercase;
  color: white;
  text-decoration: none;
  text-align: center;
}

.gb__button:hover {
  background-color: #4893f1;
}

a:hover{
  color: #fff;
}

  @media (max-width: 767px) {
    .gb__button {
    max-width: 333px;
    padding: 12px 30px;
}
  
}
</style>

{% if section.settings.button__checkbox == false %}
<div class="partner__sub--wrapper cta">
    <h2 class="partner__sub cta">{{ section.settings.button__h }}</h2>
    <a href="{{ section.settings.button__link }}" target="_blank" class="gb__button w-button">EXPLORE MORE PRODUCTS</a>
</div>
{% endif %}

{% schema %}
  {
  	"name": "Explore More Button",
  	"class": "partner-page",
  	"settings": [
	{
		"type": "checkbox",
		"id": "button__checkbox",
		"label": "Hide Section"

  	},
	{
		"type": "text",
		"id": "button__h",
		"label": "Heading Text"

  	},
	{
		"type": "url",
		"id": "button__link",
		"label": "Button link"

  	}
],
  "presets": [
    {
      "name": "Explore More Button",
      "category": "Tiles"
    }
  ]
  }

{% endschema %}

